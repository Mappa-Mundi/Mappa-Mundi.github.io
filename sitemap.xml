---
layout: null
sitemap:
  exclude: 'yes'
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <!-- Homepage -->
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Main Pages -->
  {% for page in site.pages %}
  {% unless page.sitemap.exclude == "yes" or page.url contains '/assets/' or page.url contains '/_layouts/' or page.url contains '/_includes/' or page.url contains '/_sass/' %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
    {% if page.last_modified_at %}
    <lastmod>{{ page.last_modified_at | date_to_xmlschema }}</lastmod>
    {% elsif page.date %}
    <lastmod>{{ page.date | date_to_xmlschema }}</lastmod>
    {% else %}
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    {% endif %}
    {% if page.sitemap.changefreq %}
    <changefreq>{{ page.sitemap.changefreq }}</changefreq>
    {% else %}
    <changefreq>weekly</changefreq>
    {% endif %}
    {% if page.sitemap.priority %}
    <priority>{{ page.sitemap.priority }}</priority>
    {% else %}
    <priority>0.8</priority>
    {% endif %}
  </url>
  {% endunless %}
  {% endfor %}

  <!-- Blog Posts -->
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ post.url }}</loc>
    {% if post.last_modified_at %}
    <lastmod>{{ post.last_modified_at | date_to_xmlschema }}</lastmod>
    {% else %}
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
    {% endif %}
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>
  {% endfor %}

  <!-- Blog Index -->
  <url>
    <loc>{{ site.url }}/blog/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>

  <!-- Blog Categories -->
  {% for category in site.blog_categories %}
  <url>
    <loc>{{ site.url }}/blog/category/{{ category.slug }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}

  <!-- Blog Tags -->
  {% assign tags = site.tags | sort %}
  {% for tag in tags %}
  <url>
    <loc>{{ site.url }}/blog/tag/{{ tag[0] | slugify }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
  {% endfor %}
</urlset> 